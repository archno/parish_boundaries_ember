{{#each @records as |location|}}
  {{#@g.advancedMarker
    lat=location.lat
    lng=location.lng
    content=location.iconImg
    onClick=(fn (mut @markerTooltipOpen) location) as |m|
  }}
    {{#m.infoWindow isOpen=(eq @markerTooltipOpen.id location.id) as |i|}}
      <div class="text-center">
        <h2>
          <a
            href="https://nolacatholic.org/search?query={{location.name}}"
            target="_blank"
          >
            {{location.name}}
          </a>
        </h2>
        <p>
          {{location.address}}{{#if location.address_2}}
            <br />{{location.address_2}}
          {{/if}}<br />
          <span>
            {{location.city}}, {{location.state}} {{location.zip}}
          </span>
        </p>
      </div>
    {{/m.infoWindow}}
  {{/@g.advancedMarker}}
{{/each}}